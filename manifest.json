{
    "manifest_version": 3,
    "name": "TabGroup Auto",
    "version": "1.0",
    "description": "智能标签组管理助手 - 自动将新标签页归类到指定标签组，让您的浏览更有条理",
    "author": "derrick",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage",
        "windows"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_page": "options.html"
}